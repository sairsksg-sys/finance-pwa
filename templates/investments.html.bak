      <input name="instrument_other" value="{{ edit_investment.instrument_other if edit_investment }}">
    </div>

    <div class="form-group">
      <label>Investment Title</label>
      <input name="title" required value="{{ edit_investment.title if edit_investment }}">
    </div>

